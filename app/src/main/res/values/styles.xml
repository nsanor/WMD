<resources>
    <color name="action_bar_color">#414F84</color>
    <color name="fragment_color">#6672A0</color>
    <color name="tab_color">#959FC1</color>
    
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
    </style>

    <style name="ActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/action_bar_color</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FragmentStyle">
        <item name="android:background">@color/fragment_color</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
