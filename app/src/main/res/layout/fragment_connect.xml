<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FF4040"
    android:padding="20dp"
    tools:context=".ConnectFragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/ConnectionButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/Toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/button_toggle"/>

        <Button
            android:id="@+id/Paired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_search_devices"
            android:textSize="12sp" />

        </LinearLayout>


    <LinearLayout
        android:id="@+id/ConnectionStatusLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ConnectionButtons">


        <TextView
            android:id="@+id/ConnectionStatusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:text="@string/connection_status_label"/>

        <!--<ImageView-->
            <!--android:id="@+id/ConnectionStatusImage"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/ic_launcher"/>-->

        <ProgressBar
            android:id="@+id/ConnectionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ConnectionStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="@string/connection_status_text"/>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/SyncStatusLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ConnectionStatusLayout">


        <TextView
            android:id="@+id/SyncStatusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:text="@string/sync_status_label" />

        <!--<ImageView-->
            <!--android:id="@+id/SyncStatusImage"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/ic_launcher"/>-->

        <ProgressBar
            android:id="@+id/SyncStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/SyncStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="@string/sync_status_text" />

    </LinearLayout>



    <ListView
        android:id="@+id/devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SyncStatusLayout"/>

</RelativeLayout>
